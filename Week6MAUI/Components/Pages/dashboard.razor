@page "/Dashboard" 

<div class="dashboard">
    <div class="date-filter">
        <label for="start-date">From:</label>
        <input id="start-date" type="date" @bind="StartDate" class="input-date" />

        <label for="end-date">To:</label>
        <input id="end-date" type="date" @bind="EndDate" class="input-date" />


        <button class="btn btn-primary filter-btn" @onclick="ApplyFilter">Apply Filter</button>
    </div>

    <!-- Summary Cards -->
    <div class="summary-cards">
        <div class="card">
            <h4>Total Income</h4>
            <p class="value">@currencyType @totalIncomeAmount</p>
        </div>
        <div class="card">
            <h4>Total Debt</h4>
            <p class="value">@currencyType @totalDebtAmount</p>
        </div>
        <div class="card">
            <h4>Remaining Debt</h4>
            <p class="value">@currencyType @RemainingDebt</p>
        </div>
        <div class="card">
            <h4>Total Expense</h4>
            <p class="value">@currencyType @totalExpensesAmount</p>
        </div>
        <div class="card">
            <h4>Remaining Balance</h4>
            <p class="value">@currencyType @TotalRemainingAmount</p>
        </div>
    </div>

    <!-- Recent Transactions -->
    <h4 class="section-header">Recent Transactions</h4>
    <table class="transactions-table">
        <thead>
            <tr>
                <th>Category</th>
                <th>Income Amount</th>
                <th>Debt Amount</th>
                <th>Expenses Amount</th>
                <th>Date</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var item in FilteredExpenses)
            {
            <tr>
                <td>@item.CategoryId</td>
                <td>@item.IncomeAmount</td>
                <td>@item.DebtAmount</td>
                <td>@item.ExpensesAmount</td>
                <td>@item.Date.ToShortDateString()</td>
            </tr>
            }
        </tbody>
    </table>

    <!-- Expense Distribution Chart -->
    <div class="chart-section">
        <h4 class="section-header">Expense Distribution</h4>
        <canvas id="expenseChart"></canvas>
    </div>

    <!-- Action Buttons -->
    <div class="dashboard-actions">
        <button class="btn btn-primary" @onclick="NavigateToIncomeTrack">Add Income</button>
        <button class="btn btn-primary" @onclick="NavigateToDebtTrack">Add Debt</button>
        <button class="btn btn-secondary" @onclick="NavigateToExpenseTrack">Add Expense</button>
        <button class="btn btn-info" @onclick="NavigateToReportTrack">View Detailed Report</button>
    </div>
</div>

<style>
    .dashboard {
        padding: 20px;
        font-family: Arial, sans-serif;
        background-color: #e8f5e9;
    }

    .dashboard-header {
        color: #2e7d32;
        font-size: 2rem;
        text-align: center;
        margin-bottom: 20px;
    }

    .summary-cards {
        display: flex;
        gap: 15px;
        justify-content: space-around;
        margin-bottom: 20px;
    }

    .card {
        background-color: #72a274;
        border-radius: 8px;
        padding: 15px;
        text-align: center;
        color: white;
        flex: 1;
    }

    .card h4 {
        font-size: 1.2rem;
        margin-bottom: 10px;
    }

    .card .value {
        font-size: 1.5rem;
        font-weight: bold;
    }

    .section-header {
        color: #388e3c;
        margin-top: 20px;
        margin-bottom: 10px;
        font-size: 1.5rem;
    }

    .transactions-table {
        width: 100%;
        border-collapse: collapse;
        background-color: white;
    }

    .transactions-table th, .transactions-table td {
        border: 1px solid #c8e6c9;
        padding: 10px;
        text-align: left;
    }

    .transactions-table th {
            background-color: #72a274;
        color: white;
    }

    .chart-section {
        margin-top: 20px;
        text-align: center;
    }

    .dashboard-actions {
        display: flex;
        justify-content: center;
        gap: 15px;
        margin-top: 20px;
    }

    .btn {
        padding: 10px 15px;
        border: none;
        border-radius: 4px;
        cursor: pointer;
    }

    .btn-primary {
        background-color: #4caf50;
        color: white;
    }

    .btn-secondary {
        background-color: #81c784;
        color: white;
    }

    .btn-info {
        background-color: #64b5f6;
        color: white;
    }
    .date-filter{
        margin:3%;
    }

    .filter-btn{
        padding: 5px 8px!important;
    }
</style>

<script>
    // Example for rendering a chart (using Chart.js or similar library)
    document.addEventListener("DOMContentLoaded", function () {
        const ctx = document.getElementById("expenseChart").getContext("2d");
        new Chart(ctx, {
            type: "doughnut",
            data: {
                labels: ["Food", "Transport", "Utilities"],
                datasets: [
                    {
                        data: [120.5, 45.0, 60.0],
                        backgroundColor: ["#4caf50", "#81c784", "#a5d6a7"]
                    }
                ]
            }
        });
    });
</script>
